FROM node:22-alpine

WORKDIR /app

# Install deps first for better layer caching
COPY package*.json ./
RUN npm install

# Copy source (will be overridden by bind mount in compose during dev)
COPY . .

ENV PORT=8080
EXPOSE 8080

# Generate Prisma client (safe if schema present; will re-run on container start if needed)
RUN npx prisma generate || true

CMD ["npm", "run", "dev"]
